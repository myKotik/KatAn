<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="linear_level">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="level_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sjis_sp_setofont</item>
        <item name="android:textColor">@color/lorange</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="level_imgBtn">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:contentDescription">@string/level1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>